<h1>Login</h1>
<div class="form-group">
<%= form_tag '/login' do %>
  <div class="form-group">  
  <label for="exampleInputEmail1">Email:</label><div class="form-control"<%= text_field_tag :email%></div>
  <div class="form-group">  
  <label for="exampleInputPassword1">Password:</label><div class="form-control"<%= password_field_tag :password %></div></div>
  <%= submit_tag "Submit", class: "btn btn-primary"%>
<% end %>
</div>